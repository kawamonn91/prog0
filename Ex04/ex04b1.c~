#include<stdio.h>
int main()
{
  double m,p,e,avg;
  printf("数学と物理と英語の点数をスペースで分けて入力してください");
  scanf("%lg %lg %lg",&m,&p,&e);
  avg =(m+p+e)/3;
  printf("3科目の平均点は、%g 点です。\n成績は");
  if(avg>=80) printf("優");
  else if(60<=avg<80) printf("良");
  else if(40<=avg<60) printf("可");
  else (avg<40) printf("不可");
  printf("です。\n");
  return 0;
}
  
  
